
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        tools:context="com.example.androidapp_development.profileFragment">

                <ImageView
                    android:id="@+id/profile_photo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imgHeight520dp"
                    android:background="@drawable/cat"
                    android:contentDescription="@string/profile_photo"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/fname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hight20dp"
                    android:text="@string/fName"
                    android:textSize="@dimen/size25sp"
                    android:layout_below="@+id/profile_photo"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop10"
                    android:lineHeight="@dimen/size26"
                    android:layout_below="@+id/fname" />

                    <TextView
                        android:id="@+id/occ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineHeight="@dimen/size26"
                        android:layout_below="@+id/email" />

                    <TextView
                        android:id="@+id/desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:lineHeight="@dimen/size26"
                        android:layout_below="@+id/occ" />





</RelativeLayout>
