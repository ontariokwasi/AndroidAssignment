<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidapp_development.signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16sp"

        android:layout_marginRight="16sp"
        android:textStyle="bold"

        android:backgroundTint="@color/material_on_background_emphasis_high_type"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/signupForm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:fontFamily="cursive"
            android:gravity="start"
            android:text="Meet a new People"
            android:padding="10dp"

            android:textColor="@color/teal_700"
            android:textSize="30sp"

            />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="253dp"
            android:visibility="visible"
            app:srcCompat="@drawable/cat" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="FirstName"
            android:id="@+id/fname"
            android:textSize="20sp"

            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/teal_700"
            android:inputType="text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="LastName"
            android:id="@+id/lname"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/teal_700"
            android:inputType="text" />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Description"
            android:inputType=
                "textCapSentences|textAutoCorrect|textMultiLine"
            android:padding="10dp"
            android:textColor="@color/teal_700"
            android:textSize="20sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Occupation"
            android:id="@+id/occupation"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/teal_700"
            android:inputType="text" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Adress"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/teal_700"
            />



        <Button
            android:id="@+id/datePickerButton"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select BirthDate"
            android:gravity="center"
            android:textSize="20sp"

            style="?android:spinnerStyle"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/email"
            android:layout_toEndOf="@+id/textView"
            android:backgroundTint="@color/purple_500"

            android:onClick="openDatePicker"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup"
            android:gravity="center"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/holo_blue_dark"

            android:paddingHorizontal="20dp"


            android:text="Sign Up"

            android:textSize="20sp" />
        />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="Yergalem Mekonnen"
            android:inputType="text"

            android:textSize="20sp"
            android:gravity="end"
            android:padding="10dp"
            android:textColor="@color/teal_700"
            android:visibility="invisible"

            />
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="normal"
            android:gravity="right"
            android:padding="10dp"
            android:visibility="invisible"
            android:textColor="@color/teal_700">

        </TextView>
    </LinearLayout>
   </ScrollView>